<div class="container">
  <div class="small-container">
    <h1>Change a booking for <%= @driver.name %></h1>
    <p><%= @driver.name %></p>
    <%= simple_form_for(@booking) do |f| %>
     <%= f.input :start_date, html5: true  %>
     <%= f.input :end_date, html5: true  %>
     <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

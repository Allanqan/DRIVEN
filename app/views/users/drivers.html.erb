<div class="container mt-5">
  <h1 class="headers">Your drivers</h1>
</div>
<div class="container mt-4 border-bottom border-warning border-10 d-flex justify-content-start">
  <button class="btn btn-bookings cars-tab" data-target="my-drivers">Cars</button>
  <button class="btn btn-bookings cars-tab" data-target="my-driver-bookings">Driver bookings</button>
</div>
<div class="container" style="margin-top: 24px;">
  <div class="bookings-ul active" id="my-drivers">
    <ul class="user-bookings-ul">
      <% @cars.each do |car| %>
        <li class="user-bookings-li">
          <div class="user-bookings-box-1">
            <div class="user-bookings-box-2">
              <div class="user-bookings-box-3">
                <%= cl_image_tag car.photos[0].key, class:"user-bookings-img-box" %>
              </div>
              <div>
                <div class="user-bookings-date-box">
                <div><%= car.address %></div>
                </div>
                <div class="user-bookings-drivername-box">
                  <h4><%= driver.name %> - <%= driver.status %></h4>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="bookings-ul" id="my-driver-bookings">
    <ul class="user-bookings-ul">
      <% @incoming_bookings.each do |your_booking| %>
        <li class="user-bookings-li">
          <div class="user-bookings-box-1">
            <div class="user-bookings-box-2">
              <div class="user-bookings-box-3">
                <%= cl_image_tag your_booking.car.photos[0].key, class:"user-bookings-img-box" %>
              </div>
              <div>
                <div class="user-bookings-date-box">
                <div><%= your_booking.start_date.strftime("%b %d, %Y") %> - <%= your_booking.end_date.strftime("%b %d, %Y") %></div>
                </div>
                <div class="user-bookings-drivername-box">
                  <h4><%= your_booking.driver.name %> - <%= your_booking.driver.status %></h4>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
